<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="layout" xmlns="http://javafx.com/javafx/16"
            fx:controller="be.ac.ulb.infof307.g06.views.projectViews.CloudSelectionViewController">
    <HBox layoutY="7.0" prefHeight="258.2" prefWidth="481.6" spacing="80.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
        </padding>
        <Button fx:id="GDriveButton" mnemonicParsing="false" onAction="#serviceSelect"
                style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="150.0" fitWidth="162.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../resources/icons/Google_Drive.png"/>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="DBoxButton" mnemonicParsing="false" onAction="#serviceSelect"
                style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../resources/icons/Dropbox_Icon.png"/>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>
